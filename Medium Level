package Game_Project;

import java.util.Scanner;

class MediumLevel extends Level {
    public boolean askQuestions() {
        Scanner input = new Scanner(System.in);
        String[] questions = {
            "\n<<< MEDIUM LEVEL!!! >>>\n\nQUESTION NUMBER 1:\nWhich country is known as the Land of the Rising Sun? \na) China \nb) Japan \nc) Korea \nd) India",
            "QUESTION NUMBER 2:\nWhich mountain is the highest in the world? \na) K2 \nb) Kangchenjunga \nc) Mount Everest \nd) Lhotse",
            "QUESTION NUMBER 3:\nWhich sea is the saltiest? \na) Black Sea \nb) Caspian Sea \nc) Dead Sea \nd) Red Sea",
            "QUESTION NUMBER 4:\nWhich is the smallest country in the world? \na) Monaco \nb) Vatican City \nc) San Marino \nd) Andorra",
            "QUESTION NUMBER 5:\nWhich is the longest mountain range? \na) Andes \nb) Rockies \nc) Himalayas \nd) Alps"
        };
        char[] correctAnswers = {'b', 'c', 'c', 'b', 'a'};
        
        //This for loop iterates through all the questions. It prints one question at a time using System.out.println()
        for (int i = 0; i < questions.length; i++) {
            System.out.println(questions[i]);
            System.out.print("\nEnter you asnwer here: ");
            char answer = input.next().charAt(0); 	//It grabs the token and ensures it takes only the first character
            if (answer == correctAnswers[i]) {
                System.out.println("\n--- CORRECT!! ---\n\n");
                points += 10;	// Add 10 points for correct answer
            } else {
                System.out.println("\n--- WRONG ANSWER!! ---!\n\n");
                loseAttempt();
                if (attempts == 0) {
                    System.out.println("You lost all your attempts!");
                    return false;	//Can't move to the next level
                }
            }
        }
        return true;  //Move to the hard level if the player complete all the questions
    }
}
