package Game_Project;

import java.util.Scanner;

class ImpossibleLevel extends Level {
    public boolean askQuestions() {
        Scanner input = new Scanner(System.in);
        String[] questions = {
            "\n <<< IMPOSSIBLE LEVEL!!! >>>\nTHE ANSWER MUST BE IN LOWER CASE!!!\n\nNote: You only have 1 attempt for this level, so make sure to get the correct answer!!\n\nQUESTION NUMBER 1:\nName the longest river in South America.",
            "QUESTION NUMBER 2:\nWhich is the smallest ocean in the world?",
            "QUESTION NUMBER 3:\nWhat country has the most spoken languages?",
            "QUESTION NUMBER 4:\nName the largest freshwater lake in the world.",
            "QUESTION NUMBER 5:\nWhat is the capital of Iceland?"
        };
        String[] correctAnswers = {"amazon", "arctic", "papua new guinea", "lake superior", "reykjavik"};
        
        //This for loop iterates through all the questions. It prints one question at a time using System.out.println()
        for (int i = 0; i < questions.length; i++) {
            System.out.println(questions[i]);
            System.out.print("\nEnter you asnwer here: ");
            String answer = input.nextLine().trim().toLowerCase(); //Trim spaces and convert to lower case and also read the users answer
            if (answer.equals(correctAnswers[i])) {
                System.out.println("\n--- CORRECT!! ---\n\n");
                points += 10;	// Add 10 points for correct answer
            } else {
                System.out.println("\n--- WRONG ANSWER!! ---!\n\n");
                loseImpossibleAttempts();
                if (impossibleAttempt == 0) {
                    System.out.println("You lost all your attempts!");
                    return false;	//Game Over
                }
            }
        }
        return true;	//Completed all the questions and will get a reward
    }
}
