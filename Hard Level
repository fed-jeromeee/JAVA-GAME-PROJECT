package Game_Project;

import java.util.Scanner;

class HardLevel extends Level {
    public boolean askQuestions() {
        Scanner input = new Scanner(System.in);
        String[] questions = {
            "\n<<< HARD LEVEL!!! >>>\n\nQUESTION NUMBER 1:\nWhich country is home to the Great Barrier Reef? \na) USA \nb) Australia \nc) Canada \nd) South Africa",
            "QUESTION NUMBER 2:\nWhich desert is the largest in the world? \na) Arabian \nb) Gobi \nc) Sahara \nd) Kalahari",
            "QUESTION NUMBER 3:\nWhich river flows through Paris? \na) Seine\n b) Thames \nc) Danube \nd) Tiber",
            "QUESTION NUMBER 4:\nWhat is the largest island in the world? \na) Greenland \nb) New Guinea \nc) Madagascar \nd) Iceland",
            "QUESTION NUMBER 5:\nWhich country has the most lakes? \na) Canada \nb) USA \nc) Russia \nd) Brazil"
        };
        char[] correctAnswers = {'b', 'c', 'a', 'a', 'a'};
        
        //This for loop iterates through all the questions. It prints one question at a time using System.out.println()
        for (int i = 0; i < questions.length; i++) {
            System.out.println(questions[i]);
            System.out.print("\nEnter you asnwer here: ");
            char answer = input.next().charAt(0); //It grabs the token and ensures it takes only the first character
            if (answer == correctAnswers[i]) {
                System.out.println("\n--- CORRECT!! ---\n\n");
                points += 10;	// Add 10 points for correct answer
            } else {
                System.out.println("\n--- WRONG ANSWER!! ---!\n\n");
                loseAttempt();
                if (attempts == 0) {
                    System.out.println("You lost all your attempts!");
                    return false;	//Can't move to the next level
                }
            }
        }
        return true;  //Move to the impossible level if the player complete all the questions
    }
}
